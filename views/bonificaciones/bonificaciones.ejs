<% layout('menu') %>

<div class="container mt-5">
    <h1 class="mb-4">Bonificaciones por Empleado</h1>

    <form method="get" action="/reporte-bonificaciones" class="row g-3 mb-4">
        <div class="col-md-4">
            <label for="mes" class="form-label">Mes:</label>
            <select name="mes" id="mes" class="form-select" required>
                <% for (let m = 1; m <= 12; m++) { %>
                    <option value="<%= m %>" <%= m == mesSeleccionado ? 'selected' : '' %>><%= m %></option>
                <% } %>
            </select>
        </div>
        <div class="col-md-4">
            <label for="anio" class="form-label">A침o:</label>
            <input type="number" name="anio" id="anio" class="form-control" value="<%= anioSeleccionado %>" required>
        </div>
        <div class="col-md-4 align-self-end">
            <button type="submit" class="btn btn-primary w-100">Generar Reporte</button>
        </div>
    </form>

    <% if (datos.length > 0) { %>
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID Empleado</th>
                    <th>Nombre</th>
                    <th>Meta</th>
                    <th>Ventas del Mes</th>
                    <th>Bonificaci칩n</th>
                    <th>Turnos Realizados</th>
                    <th>Total Ventas</th>
                </tr>
            </thead>
            <tbody>
                <% datos.forEach(d => { %>
                    <tr>
                        <td><%= d.id_empleado %></td>
                        <td><%= d.empleado %></td>
                        <td><%= d.meta %></td>
                        <td><%= d.ventas_mes %></td>
                        <td><%= d.bonificacion %></td>
                        <td><%= d.turnos_realizados %></td>
                        <td><%= d.total_ventas %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else if (mesSeleccionado && anioSeleccionado) { %>
        <div class="alert alert-warning">No se encontraron datos para el mes y a침o seleccionados.</div>
    <% } else { %>
        <div class="alert alert-info">Seleccione un mes y a침o para ver las bonificaciones.</div>
    <% } %>
</div>